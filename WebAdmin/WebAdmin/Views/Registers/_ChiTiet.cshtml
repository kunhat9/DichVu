@model int
@{
    CORE.Tables.TB_REGISTERS register = ViewBag.Register;
    if (register == null)
    {
        register = new CORE.Tables.TB_REGISTERS();
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title"></h5>
        </div>
        <div class="modal-body">
            <!-- Voucher info -->
            <div class="panel panel-flat">
                <div class="panel-body" style="height: @(Model)px;max-height: @(Model)px;overflow-y: auto;">
                    <form class="form-horizontal">
                        <input type="hidden" value="@register.RegisterId" id="REG_ID" />
                        <div class="form-group">
                            <label class="control-label col-md-3">Mã dịch vụ :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterServiceId" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên người dùng :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterUserName" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Email :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterUserEmail" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Điện thoại :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterUserPhone" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Ngày bắt đầu thuê :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterDateBegin.ToString("dd/MM/yyyy")" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Số ngày sử dụng :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" value="@register.RegisterDateNumber" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Trạng thái :</label>
                            <div class="col-md-6">
                                <select class="select-search form-control not-empty" tabindex="-1" aria-hidden="true" id="REG_STATE">
                                    <option value="">-- Chọn Trạng thái --</option>
                                    <option value="N" @if (register.RegisterStatus == "N") { <text> selected</text>}>Mới đăng ký</option>
                                    <option value="A" @if (register.RegisterStatus == "A") { <text> selected</text>}>Đã duyệt</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Voucher info -->
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
            <button type="button" onclick="UploadFile()" class="btn btn-primary btnSaveVoucher">Save changes</button>
        </div>
    </div>
</div>