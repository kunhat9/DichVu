@model int
@{
    CORE.Tables.TB_CATEGORIES ca = ViewBag.Category;
    if (ca == null)
    {
        ca = new CORE.Tables.TB_CATEGORIES();
    }
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title"></h5>
        </div>
        <div class="modal-body">
            <!-- Voucher info -->
            <div class="panel panel-flat">
                <div class="panel-body" style="height: @(Model)px;max-height: @(Model)px;overflow-y: auto;">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3">Mã Danh mục :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" id="CATEGORY_CODE" value="@ca.CategoryCode" @if (!string.IsNullOrEmpty(ca.CategoryCode)) { <text> readonly</text>  }>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Tên Danh mục :</label>
                            <div class="col-md-6">
                                <input type="text" maxlength="50" class="form-control not-empty" id="CATEGORY_NAME" value="@ca.CategoryName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Trạng thái :</label>
                            <div class="col-md-6">
                                <select class="select-search form-control not-empty" name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" tabindex="-1" aria-hidden="true" id="CATEGORY_STATE">
                                    <option value="">-- Chọn Trạng thái --</option>
                                    <option value="A" @if (ca.CategoryState == "A") { <text> selected</text>}>Kích hoạt</option>
                                    <option value="D" @if (ca.CategoryState == "D") { <text> selected</text>}>Không kích hoạt</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Giởi thiệu :</label>
                                <textarea rows="6" class="form-control" style="resize: vertical;" id="CATEGORY_NOTE" placeholder="Nhập mô tả ngắn gọn">@ca.CategoryNote</textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /Voucher info -->
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
            <button type="button" onclick="UploadFile()" class="btn btn-primary btnSaveVoucher">Save changes</button>
        </div>
    </div>
</div>