        <div class="product-block product-grid row clearfix">
            @if (Model.Count > 0)
            {
                foreach (TB_PRODUCTS item in Model)
                {
                    <div class="col-md-3 col-sm-3 col-xs-12 product-resize product-item-box">
                        <div class="product-item">
                            <div class="image image-resize">
                                <a href="/Products/Detail?Id=@item.ProductCode" title="@item.ProductName">
                                    <img class="img-responsive" src="@(AppConfigInfo.Images + files.Where(x=>x.FileReferenceId==item.ProductCode).Select(x=>x.FilePath).FirstOrDefault())" alt="@item.ProductName" title="@item.ProductName" />
                                </a>
                                <div class="ribbon">
                                </div>
                                <div class="newst-img">
                                    <a href="/Products/Detail?Id=@item.ProductCode" title=""><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="right-block">
                                <h2 class="name">
                                    <a href="/Products/Detail?Id=@item.ProductCode" title="">@item.ProductName</a>
                                </h2>
                                <div class="price">
                                    <span class="price-new">@string.Format("{0:N0}", item.ProductPrice)&nbsp;₫</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>Không có sản phẩm.</div>
            }
        </div>
